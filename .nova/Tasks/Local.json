{
  "actions" : {
    "build" : {
      "enabled" : true,
      "script" : "bundle update \nbundle install\nbundle exec jekyll clean\nbundle exec jekyll build"
    },
    "clean" : {
      "enabled" : true,
      "script" : "bundle exec jekyll clean"
    },
    "run" : {
      "enabled" : true,
      "script" : "bundle exec jekyll serve --config _local.yml --liveReload -o"
    }
  },
  "openLogOnRun" : "start"
}
